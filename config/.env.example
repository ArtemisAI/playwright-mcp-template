# Environment Variables for Playwright MCP
# Copy to .env or set in your shell

# Playwright Configuration
PLAYWRIGHT_BROWSER_TYPE=chromium
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_VIEWPORT_WIDTH=1920
PLAYWRIGHT_VIEWPORT_HEIGHT=1080
PLAYWRIGHT_DEFAULT_TIMEOUT=30000
PLAYWRIGHT_NAVIGATION_TIMEOUT=60000

# Browser Launch Options
PLAYWRIGHT_SLOW_MO=0
PLAYWRIGHT_DEVTOOLS=false
PLAYWRIGHT_IGNORE_HTTPS_ERRORS=true
PLAYWRIGHT_ACCEPT_DOWNLOADS=true

# MCP Server Configuration
MCP_SERVER_PORT=3000
MCP_CACHE_DIR=.mcp-cache
MCP_LOG_LEVEL=info
MCP_DEBUG=false

# Network Configuration
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Security Settings
DISABLE_WEB_SECURITY=false
IGNORE_CERTIFICATE_ERRORS=false
ALLOW_RUNNING_INSECURE_CONTENT=false

# Performance Tuning
MAX_CONCURRENT_TABS=5
PAGE_LOAD_STRATEGY=normal
NETWORK_IDLE_TIMEOUT=5000

# Debugging
DEBUG_SCREENSHOTS=false
DEBUG_CONSOLE_LOGS=false
SAVE_HAR_ON_ERROR=false

# User Agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Download Configuration
DOWNLOAD_PATH=./downloads
ACCEPT_DOWNLOADS=true

# Localization
LOCALE=en-US
TIMEZONE=America/Montreal
